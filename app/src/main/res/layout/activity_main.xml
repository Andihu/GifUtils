<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:elevation="10dp"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="GIF 工具"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/image2gif"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background2"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="图片合成Gif"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_graphic_stitching_three"
                    app:tint="#ffffff" />
            </FrameLayout>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="#5188FD"
                android:padding="5dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:gravity="center"
                android:text="多张照片合成gif"
                android:background="@drawable/image_2_gif_text_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/video2gif"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background1"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="视频转Gif"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_video_details_play"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_gif"
                    app:tint="#ffffff" />
            </FrameLayout>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="视频提取为gif图片"
                android:gravity="center"
                android:background="@drawable/video_2_gif_text_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/decomposition_gif"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background4"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="分解Gif"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_decomposition"
                    app:tint="#ffffff" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/image_2_gif_text_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone"
                android:text="提取gif图片"
                android:textColor="#EA2711"
                android:textSize="12sp" />

            <FrameLayout
                android:id="@+id/marge_gif"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background3"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="拼接Gif"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_merge"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_gif"
                    app:tint="#ffffff" />
            </FrameLayout>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="#0099FD"
                android:padding="5dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:text="将多个Gif图合并为同一个gif图"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>